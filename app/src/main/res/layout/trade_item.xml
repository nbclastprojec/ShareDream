<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="272dp"
        android:layout_height="119dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tradepage_tittle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:fontFamily="@font/bbing"
            android:gravity="right"
            android:text="필요 없어진 간석기 교환 합니다."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tradepage_subtittle"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bbing"
            android:gravity="right"
            android:text="청동도끼 사용해서 이제 필요 없어요 :)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tradepage_category"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bbing"
            android:gravity="right"
            android:text="카테고리 : 도구"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bmdh"
                android:gravity="center"
                android:text="값어치 : " />

            <TextView
                android:id="@+id/trade_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bbing"
                android:text="1,000원 " />

            <TextView
                android:id="@+id/tradepage_date"
                android:layout_width="128dp"
                android:layout_height="27dp"
                android:fontFamily="@font/bbing"
                android:gravity="right"
                android:text="2023.10.11" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/bar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tradepage_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gan" />

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/soldout_bg_color"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/bg_img_completed_trade_white" />-->


    </FrameLayout>


    <View
        android:id="@+id/bar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>