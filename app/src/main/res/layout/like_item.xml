<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="276dp"
        android:layout_height="124dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/like_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/like_tittle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="필요 없어진 간석기 교환 합니다."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/like_subtittle"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:maxLines="1"
            android:text="청동도끼 사용해서 이제 필요 없어요 :)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/like_category"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="카테고리 : 도구"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="값어치 : " />

            <TextView
                android:id="@+id/like_price"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="5,000원 "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/like_date"
                android:layout_width="90dp"
                android:layout_height="27dp"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="2023.10.11" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/like_image"
        android:layout_width="106dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gan" />

    <View
        android:id="@+id/bar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <ImageView
        android:id="@+id/likeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/like_image"
        app:layout_constraintEnd_toEndOf="@+id/like_image"
        app:srcCompat="@drawable/fullheart" />
</androidx.constraintlayout.widget.ConstraintLayout>