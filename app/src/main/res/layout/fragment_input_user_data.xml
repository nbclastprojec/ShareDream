<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="265dp"
            android:src="@drawable/trade"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="44dp"
            android:text="필수 입력사항"
            android:layout_marginEnd="110dp"
            android:layout_marginStart="150dp"
            app:layout_constraintHeight_percent="0.05"
            android:textColor="@color/black"
            android:fontFamily="@font/suitesemibold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.618"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:text="원활한 어플 사용을 위해 필수정보를 입력해 주세요!"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.040"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="NotSibling" />



        <EditText
            android:id="@+id/edit_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintHeight_percent="0.055"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/login_editbox"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNumber"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/edit_nickName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.055"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login_editbox"
            android:ems="10"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickName"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.04"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_number" />

        <TextView
            android:id="@+id/userNumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintHeight_percent="0.045"
            android:layout_marginTop="72dp"
            android:text="전화번호"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <LinearLayout
            android:id="@+id/allAgree"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/checkboxline"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_nickName"
            android:paddingLeft="10dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"

                />



            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="모두 동의"
                android:textColor="@color/black"
                android:fontFamily="@font/suitesemibold"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree_1"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allAgree">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:textSize="18sp"
                android:text="이용약관 동의"
                android:fontFamily="@font/suitebold"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/suiteheavy"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/agree_2"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agree_1">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="이용약관"
                android:paddingLeft="10dp"
                android:fontFamily="@font/suitebold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/imageView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/suiteheavy" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintHeight_percent="0.065"
            android:layout_marginTop="50dp"
            android:background="@drawable/loginbtn"
            android:text="입력하였으며 약관에 동의합니다."
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agree_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.6px"
            android:layout_marginTop="68dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>