<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/trade"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="회원가입"
            android:textSize="25sp"
            android:fontFamily="@font/suitesemibold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/searchid"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/eidt_id"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/searchid"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ID" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/searchid"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/edit_phoneNumber"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/searchid"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/edit_passwordCheck"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/searchid"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suitesemibold"
            android:text="아이디"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_email" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suitesemibold"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eidt_id" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suitesemibold"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_password" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="이메일"
            android:fontFamily="@font/suitesemibold"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suitesemibold"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_passwordCheck" />

        <LinearLayout
            android:id="@+id/allAgree"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/checkboxline"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_phoneNumber"
            android:paddingLeft="10dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="false"

                />



            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="모두 동의"
                android:textColor="@color/black"
                android:fontFamily="@font/suitesemibold"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree_1"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allAgree">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:textSize="18sp"
                android:text="이용약관 동의"
                android:fontFamily="@font/suitebold"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/suiteheavy"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/agree_2"
            android:layout_width="294dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agree_1">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="이용약관"
                android:paddingLeft="10dp"
                android:fontFamily="@font/suitebold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/imageView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/suiteheavy" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginbtn"
            android:text="가입하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/suitesemibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agree_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>