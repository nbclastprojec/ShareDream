<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="필터"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipgroup"
        style="@style/CustomChipHoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/all"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="전체"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cloths_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="의류"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/machine_chip"
            style="@style/CustomChipHoice"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:checkable="true"
            android:text="가전제품"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />


        <com.google.android.material.chip.Chip
            android:id="@+id/sport_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="스포츠"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/art_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="예술"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/book_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="독서"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/beauty_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="뷰티"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/toy_chip"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="문구"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/furniture"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="가구"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/life"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="생활"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/food"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="식품"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/kids"
            style="@style/CustomChipHoice"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checkable="true"
            android:text="유아동/출산"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pet"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checkable="true"
            android:text="반려동물용품"
            android:textAlignment="center"
            android:textSize="15sp"
            style="@style/CustomChipHoice"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/etc"
            style="@style/CustomChipHoice"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="기타"
            android:textAlignment="center"
            android:textSize="15sp"
            app:chipStrokeColor="#8d99ae"
            app:chipStrokeWidth="1dp"
            app:singleSelection="false" />
    </com.google.android.material.chip.ChipGroup>


    <View
        android:id="@+id/view119"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipgroup" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="가격범위"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view119" />

    <TextView
        android:id="@+id/max10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="0~10,000원"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/max30000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:text="10,000~30,000원"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/view200"
        app:layout_constraintTop_toTopOf="@+id/max10000" />

    <TextView
        android:id="@+id/max50000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:clickable="true"
        android:text="30,000~50,000원"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/max10000"
        app:layout_constraintTop_toBottomOf="@+id/max10000" />

    <TextView
        android:id="@+id/max100000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:clickable="true"
        android:text="50,000~100,000원"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/view30000"
        app:layout_constraintTop_toTopOf="@+id/max50000" />

    <TextView
        android:id="@+id/max150000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:padding="5dp"
        android:text="100,000~150,000원"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/max50000"
        app:layout_constraintTop_toBottomOf="@+id/max50000" />

    <View
        android:id="@+id/view150000"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray700"
        app:layout_constraintStart_toEndOf="@+id/max150000"
        app:layout_constraintTop_toTopOf="@+id/max150000" />

    <TextView
        android:id="@+id/maxfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:text="그 이상"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/view150000"
        app:layout_constraintTop_toTopOf="@+id/max150000" />

    <View
        android:id="@+id/view200"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray700"
        app:layout_constraintStart_toEndOf="@+id/max10000"
        app:layout_constraintTop_toTopOf="@+id/max10000" />

    <View
        android:id="@+id/view30000"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray700"
        app:layout_constraintStart_toEndOf="@+id/max50000"
        app:layout_constraintTop_toTopOf="@+id/max50000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button2"
        android:text="확인"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/max150000" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="카테고리"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>