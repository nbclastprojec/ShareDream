<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NickNacmeCheckDialogFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="17dp"
            android:text="어플에서 사용할 닉네임을 정해주세요!"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/suitesemibold"
            app:layout_constraintHeight_percent="0.045" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/suiteregular"
            android:text="닉네임"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.04" />

        <EditText
            android:id="@+id/edit_nickName"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login_editbox"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintHeight_percent="0.055" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nickNameCreateBtn"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/loginbtn"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintHeight_percent="0.055" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/black" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>